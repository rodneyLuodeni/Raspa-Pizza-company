@{
    ViewBag.Title = "Home Page";
}

<main >
    
    <!-- carousel -->
    <section class="row hidden-xs hidden-sm">
        <div class="col-md-12">

            <figure id="myCarousel" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                </ol>


                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/Images/Dynamic/header/pizzaHeader1.jpg"/>
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/Dynamic/header/pizzaHeader2.jpg"/>
                    </div>
                </div>
            </figure>
        </div>
    </section>


    <!-- First row of articles -->
    <section class="row rowContentMarginTop">
        <div class="col-md-12">
            <article class="col-md-6 articleRelative">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item1.jpg" class="img-responsive">
                </figure>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Maak Jouw Eigen Pizza</a>
                </div>
            </article>


            <article class="col-md-3 articleRelative">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item2.jpg" class="img-responsive"/>
                </figure>
                <h3>Mis nooit meer een deal!</h3>
                <p>Wil je ook exclusieve aanbiedingen en promoties ontvangen? Meld je dan nu aan per e-mail of SMS om op jouw favoriete Papa John’s producten te besparen.</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Inschrijven</a>
                </div>
            </article>


            <article class="col-md-3 articleRelative">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item3.jpg" class="img-responsive"/>
                </figure>
                <h3>Kom bij ons werken!</h3>
                <p>Papa John’s heeft verscheidene banen beschikbaar. Stuur ons je sollicitatiebrief!</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Lees Meer</a>
                </div>
            </article>

        </div>
    </section>
    
    
    
    <!-- Second row of articles -->
    <div style="width: 100%">
    <section class="row rowContentMarginTop grayArticleSection">
        <div class="col-md-12">
            

            <article class="col-md-3 articlePromoRelative rightBorderGrey">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item2-1.jpg" class="img-responsive"/>
                </figure>
                <h3>Beste Ingrediënten!</h3>
                <p>Deze zullen we altijd behouden.</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Lees Meer</a>
                </div>
            </article>
            
            
            <article class="col-md-3 articlePromoRelative rightBorderGrey">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item2-2.jpg" class="img-responsive" />
                </figure>
                <h3>Papa reward</h3>
                <p>Verzamel punten bij iedere bestelling met Papa John’s loyalty programma.</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Lees Meer</a>
                </div>
            </article>
            
            <article class="col-md-3 articlePromoRelative rightBorderGrey">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Dynamic/Articles/item2-3.jpg" class="img-responsive" />
                </figure>
                <h3>Speciale aanbiedingen</h3>
                <p>Kijk hier naar onze speciale aanbiedingen.</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Lees Meer</a>
                </div>
            </article>
            
            
            
            <article class="col-md-3 articlePromoRelative rightBorderGrey">
                <figure class="img-responsive">
                    <img src="~/Content/Images/Static/logo.png" class="img-responsive" />
                </figure>
                <h3>Wie zijn wij?</h3>
                <p>Lees verder over Papa John’s succesverhaal.</p>
                <div class="btnAbsoluteBottom">
                    <a href="#" class="btn btn-default btn-md">Lees Meer</a>
                </div>
            </article>

        </div>
    </section>
        </div>
</main>

